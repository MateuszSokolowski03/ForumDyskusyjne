@model IEnumerable<ForumDyskusyjne.Models.UserRankHistory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PostCountAtChange)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangeReason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OldRank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewRank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangedByUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PostCountAtChange)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChangeReason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OldRank.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewRank.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChangedByUser.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

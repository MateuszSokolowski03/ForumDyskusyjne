@model IEnumerable<ForumDyskusyjne.Models.BannedWord>

@{
    ViewData["Title"] = "Słowa Zakazane";
    Layout = "_Layout";
}

<div class="card">
    <div class="card-header">
        <h1><i class="fas fa-ban"></i> Słowa Zakazane</h1>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <p class="text-muted mb-0">Zarządzaj filtrami słów zakazanych</p>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Dodaj Słowo
            </a>
        </div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Word)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeverityLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MatchType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsageCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedByUser)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Word)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeverityLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MatchType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsageCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedByUser.Email)
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
    </div>
</div>

@model IEnumerable<ForumDyskusyjne.Models.Announcement>

@{
    ViewData["Title"] = "Ogłoszenia";
    Layout = "_Layout";
}

<div class="card">
    <div class="card-header">
        <h1><i class="fas fa-bullhorn"></i> Ogłoszenia</h1>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <p class="text-muted mb-0">Zarządzaj ogłoszeniami forum</p>
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Dodaj Ogłoszenie
            </a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Title)</th>
                    <th>@Html.DisplayNameFor(model => model.Content)</th>
                    <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                    <th>@Html.DisplayNameFor(model => model.ExpiresAt)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedByUser)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
@foreach (var item in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Content)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.ExpiresAt)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedByUser.Email)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="fas fa-eye"></i></a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
}
            </tbody>
        </table>
    </div>
</div>
